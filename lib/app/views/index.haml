=haml :form, locals: { idea: idea }

%h3 Existing Ideas

%ul
  - ideas.each_with_index do |idea, id|
    %li
      Id:
      =idea.id
      Title:
      =idea.title
      %br
      Rank:
      =idea.rank
      %br
      Tags:
      =idea.tags
      %br
      Group:
      =idea.group
      %br
      Created At:
      =idea.created_at
      %br
      Updated At:
      =idea.updated_at
      %br
      Revision Number:
      =idea.revision
      %br
      Description:
      =idea.description
      %br

      %form{ :action => "/#{id}/like", :method => 'POST', :style => "display: inline"}
        %input{:type => 'submit', :value => '+'}

      %form{:action => "/#{id}/edit", :method => "GET", :style => "display: inline"}
        %input{:type => "submit", :value => "Edit"}

      %form{:action => "/#{id}", :method => "POST", :style => "display: inline"}
        %input{:type => "hidden", :name => "_method", :value => "DELETE"}
        %input{:type => "submit", :value => "Delete"}

    %br